FROM ruby:2.6-alpine@sha256:f3eeb2b71ae7c004ca57ddb12618fde07dece33e6a0f0a50b53f03b83be76174

RUN apk add --update \
    build-base \
    openssl \
    ca-certificates && \
    rm /var/cache/apk/* && \
    rm -rf /usr/share/ri


WORKDIR /work

COPY Gemfile /work/Gemfile
COPY Gemfile.lock /work/Gemfile.lock
COPY bin/eztv-rss-creator /work/run
RUN chmod +x /work/run

RUN bundle install --without development

CMD "/work/run"
